{
	"compilerOptions": {
		"jsx": "react",
		"module": "es6",
		"target": "es5",
		"outDir": "./docs/",
		"allowJs": true,
		"esModuleInterop": true,
		"noImplicitAny": true,
		"preserveConstEnums": true,
		"removeComments": true,
		"sourceMap": true,
		"baseUrl": ".",
		"skipLibCheck": true,
		"paths": {
			"*": ["node_modules/*", "sketch/types/*", "sketch/*"]
		}
	},
	"compileOnSave": true,

	"include": ["sketch", "typings/*"]
}
